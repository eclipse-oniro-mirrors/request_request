import("//build/test.gni")
module_output_path = "request/request"

ohos_unittest("preload_test") {
  module_out_path = module_output_path

  include_dirs = [
    "include",
    "../../../../interfaces/inner_kits/predownload/include",
    "../../../../common/include",
  ]

  sources = [
    "src/abnormal.cpp",
    "src/cancel.cpp",
    "src/common.cpp",
    "src/fail.cpp",
    "src/progress.cpp",
    "src/success.cpp",
  ]

  deps = [
    "../../../../preload/cache_download:preload_native",
    "//third_party/rust/crates/cxx:cxx_cppdeps",
  ]
  external_deps = [
    "googletest:gmock",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":preload_test" ]
}
