import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")

ohos_rust_shared_library("cache_download_ani") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    boundary_sanitize = true
    all_ubsan = true
    debug = false
  }

  sources = [ "src/lib.rs" ]

  external_deps = [
    "netmanager_base:ani_rs",
    "runtime_core:ani",
  ]

  deps = [
    "../../../native/cache_download:preload_native",
    "//third_party/rust/crates/serde/serde:lib",
  ]

  clippy_lints = "none"

  subsystem_name = "request"
  part_name = "request"
  output_extension = "so"
}

generate_static_abc("cache_download") {
  base_url = "./ets"
  files = [ "ets/@ohos.request.cacheDownload.ets" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/cache_download.abc"
}

ohos_prebuilt_etc("cache_download_etc") {
  source = "$target_out_dir/cache_download.abc"
  module_install_dir = "framework"
  subsystem_name = "request"
  part_name = "request"
  deps = [ ":cache_download" ]
}
